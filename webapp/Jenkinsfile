pipeline {
  agent any

  options {
    timeout(time: 2, unit: 'MINUTES')
  }

  environment {
    ARTIFACT_ID = "iduarte351651156/webapp:${env.BUILD_NUMBER}"
  }

  stages {
    stage('Build') { //Built
      steps {
        script {
          dir("webapp") {
            dockerImage = docker.build "${env.ARTIFACT_ID}"
          }
        }
      }
    }
    stage('Run tests') {
      steps {
        sh "docker run ${dockerImage.id} npm test"
      }
    }
    stage('Publish') {
      when {
        branch 'main'
      }
      steps {
        script {
          docker.withRegistry("", "dockerhub") {
            dockerImage.push()
          }
        }
      }
    }
    stage('Schedule Staging Deployment') {
      when {
        branch 'main'
      }
      steps {
        build job: 'deploy-webapp-staging', parameters: [string(name: 'ARTIFACT_ID', value: "${env.ARTIFACT_ID}")], wait: false
      }
    }
    stage('Archive source') {
      sh 'git rev-parse HEAD > GIT_COMMIT'
      sh 'tar -czf source.tar.gz --exclude=.git .'
      archiveArtifacts artifacts: 'source.tar.gz,GIT_COMMIT', fingerprint: true
    }
  }
}

